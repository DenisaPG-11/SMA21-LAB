<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tStatus_n"
        android:layout_width="284dp"
        android:layout_height="42dp"
        android:hint="No entries found for January"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.896" />

    <Button
        android:id="@+id/bUpdate"
        android:layout_width="359dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:onClick="clicked"
        android:text="Update"
        app:layout_constraintBottom_toTopOf="@+id/eSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="92dp"
        android:layout_weight="0.4"
        android:onClick="clicked"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/eSearch"
        android:layout_width="180dp"
        android:layout_height="42dp"
        android:layout_marginBottom="100dp"
        android:layout_weight="0.6"
        android:hint="January"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bSearch"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/eIncome"
        android:layout_width="86dp"
        android:layout_height="44dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="28dp"
        android:layout_weight="0.35"
        android:hint="1500"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/eExpenses"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="159dp"
        android:layout_height="45dp"
        android:layout_marginBottom="52dp"
        android:layout_weight="0.15"
        android:text="Expenses:"
        app:layout_constraintBottom_toTopOf="@+id/bUpdate"
        app:layout_constraintEnd_toStartOf="@+id/eExpenses"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="0.15"
        android:text="Income:"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/eIncome"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="0.15"
        android:text="Income:"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/eIncome"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/eExpenses"
        android:layout_width="85dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="72dp"
        android:layout_weight="0.35"
        android:hint="1200"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="353dp"
        android:layout_height="41dp"
        app:layout_constraintBottom_toTopOf="@+id/tStatus_n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.808" />


</androidx.constraintlayout.widget.ConstraintLayout>