<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.upt.cti.smartwallet.AddPaymentActivity">

    <EditText
        android:id="@+id/eName"
        android:layout_width="331dp"
        android:layout_height="68dp"

        android:layout_above="@+id/eCost"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="31dp"
        android:text="Description"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/eCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_above="@+id/tTimestamp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="211dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="342dp"
        android:hint="123.45 LEI "
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tTimestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="120dp"
        android:hint="Time of pament 2016-10-31 17:31:22"
        android:textColorHint="@color/black" />

    <LinearLayout
        android:id="@+id/lBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <Button
            android:id="@+id/bSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:checkable="true"
            android:clickable="true"
            android:text="&#8592; Save" />

        <Button
            android:id="@+id/bDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:checkable="true"
            android:clickable="true"
            android:text="DELETE &#8594;" />

    </LinearLayout>

    <Spinner
        android:id="@+id/sType"
        android:layout_width="374dp"
        android:layout_height="70dp"
        android:layout_above="@+id/tTimestamp"
        android:layout_marginBottom="209dp" />


</RelativeLayout>